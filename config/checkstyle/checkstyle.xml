<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="severity" value="error"/>
    <module name="SuppressionFilter">
        <property name="file" value="config/checkstyle/suppressions.xml"/>
    </module>

    <module name="TreeWalker">
        <!-- Braces always and placement -->
        <module name="NeedBraces"/>
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>
        <module name="RightCurly">
            <property name="option" value="same"/>
        </module>

        <!-- Method names: forbid getters/setters by default; allow via suppressions -->
        <module name="MethodName">
            <property name="format" value="^(?!get.*|set.*).+$"/>
        </module>

        <!-- Line length is configured at Checker level below -->

        <!-- Ban assignments to null and returns of null in src/main only (scoped in SuppressWithPlainTextCommentFilter if needed) -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="=\s*null;"/>
            <property name="message" value="Do not assign null; initialize with a real value."/>
        </module>
        <module name="RegexpSinglelineJava">
            <property name="format" value="return\s+null;"/>
            <property name="message" value="Do not return null; use an object or Optional."/>
        </module>
    </module>

    <!-- Line length: 80 at Checker level; allow class decls and throws to exceed -->
    <module name="LineLength">
        <property name="max" value="80"/>
        <property name="ignorePattern" value="(^\s*(public|protected|private)?\s*(class|interface|enum)\b)|\bthrows\b|^\s*import\s"/>
    </module>

    <module name="Indentation">
        <property name="basicOffset" value="4"/>
        <property name="braceAdjustment" value="0"/>
        <property name="caseIndent" value="4"/>
        <property name="lineWrappingIndentation" value="4"/>
    </module>
</module>

